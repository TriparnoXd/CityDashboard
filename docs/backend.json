{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the application.",
      "properties": {
        "uid": { "type": "string", "description": "The user's unique ID." },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the user's profile picture."
        },
        "location": {
          "type": "string",
          "description": "The user's preferred weather location."
        },
        "unit": {
          "type": "string",
          "enum": ["C", "F"],
          "description": "The user's preferred temperature unit."
        }
      },
      "required": ["uid"]
    }
  },
  "auth": { "providers": ["password", "google.com"] },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profile and preference data."
    }
  }
}
